
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}

<section class="bg0 p-t-104 p-b-116">
    <div class="container">
        <div class="flex-c flex-tr">
            <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                {
                    <h4 class="mtext-105 cl2 txt-center p-b-30">
                        Login In ABC Admin
                    </h4>
                    <h6 class="text-center text-danger">
                        @ViewBag.Error
                    </h6>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="username" placeholder="Your Username" value="@TempData["Email"] " required>
                        <img class="how-pos4 pointer-none" src="~/Asset/images/icons/icon-email.png" alt="ICON">
                    </div>

                    <div class="bor8 m-b-20 how-pos4-parent ">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30 " type="password" name="Password" placeholder="Your Password" value="@TempData["Password"]" required>
                        <img class="how-pos4 pointer-none" src="~/Asset/images/icons/icons8-key-security-25.png" alt="ICON">
                    </div>


                    <input class="flex-c-m stext-101 cl0 size-121 bg3  hov-btn3 p-lr-15 trans-04 pointer"
                           type="submit" value="Login" />
                }
            </div>
        </div>
    </div>
</section>

