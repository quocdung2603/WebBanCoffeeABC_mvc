            <span class="mdi mdi-menu"></span>
        </button>
    </div>
    @if (Session["Admin"] != null)
    {
        <div style="display:none">
            @using (Html.BeginForm("LogOut", "User", FormMethod.Post, new { @id = "logOffForm" }))
            {
                @Html.AntiForgeryToken()
            }
        </div>
    }
